#!/bin/bash

# Exit on error
set -e

# Check if lua-language-server is installed
if ! command -v lua-language-server &> /dev/null; then
    echo "Error: LuaLS is not installed. Please install it first:"
    echo "  brew install lua-language-server"
    exit 1
fi

# Run lua-language-server type checking on the lua directory
echo "Running type checking on lua directory..."
lua-language-server --check lua/

echo "Type checking complete!" 