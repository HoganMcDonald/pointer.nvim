#!/bin/bash

# Exit on error
set -e

# Check if stylua is installed
if ! command -v stylua &> /dev/null; then
    echo "Error: Stylua is not installed. Please install it first:"
    echo "  brew install stylua"
    exit 1
fi

# Run stylua on the lua directory
echo "Running stylua on lua directory..."
stylua lua/

echo "Formatting complete!" 